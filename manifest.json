{
  "name": "Dribbble Color Pallette Addon",
  "description": "Grab Color Palette on Dribbble and generate a json file for importing into Sketch",
  "manifest_version": 2,
  "version": "1.0",
  "icons": {
    "48": "icons/basketball.svg"
  },

  "applications": {
    "gecko": {
      "id": "chinghc@gmail.com",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/basketball.svg"
  },
  
  "permissions": ["nativeMessaging", "tabs"]
}
